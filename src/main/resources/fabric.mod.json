{
  "schemaVersion": 1,
  "id": "buildcraft_revolution",
  "version": "${version}",

  "name": "BuildCraft Revolution",
  "description": "Buildcraft recreation for Fabric and newest versions of Minecraft",
  "authors": [
    "Allerek",
    "RaDzik"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/Allerek/buildcraft-revolution"
  },

  "license": "MPL-2.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.buildcraftr.buildcraft_revolution.BuildcraftRevolution"
    ],
    "client" : [
      "net.buildcraftr.buildcraft_revolution.BuildcraftRevolutionClient"
    ]
  },
  "mixins": [
    "buildcraft_revolution.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
